# ProxLB Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: .env is gitignored for security

# DNS Configuration
# If you only use one DNS server, leave DNS_SERVER2 empty
DNS_SERVER1=192.168.1.1
DNS_SERVER2=
DNS_DOMAIN=yourdomain.local
DNS_SEARCH=yourdomain.local

# Proxmox Authentication
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=proxlb

# Proxmox Node 1
PROXMOX_NODE1_HOST=https://proxmox1.yourdomain.local:8006
PROXMOX_NODE1_TOKEN=your-token-secret-here

# Proxmox Node 2
PROXMOX_NODE2_HOST=https://proxmox2.yourdomain.local:8006
PROXMOX_NODE2_TOKEN=your-token-secret-here

# Proxmox Node 3 (optional)
#PROXMOX_NODE3_HOST=https://proxmox3.yourdomain.local:8006
#PROXMOX_NODE3_TOKEN=your-token-secret-here
